<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reihiei.firstapp">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.reihiei.firstapp.ui.activity.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.AddCountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.TagManageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.EditTagActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.AnalyseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.PasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.FingerPrintActivity"
            android:screenOrientation="portrait"
            android:theme="@style/translucent" />

        <activity android:name=".ui.activity.EditManageProductActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.activity.ManageProductActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.SafeInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/translucent" />

        <activity android:name=".ui.activity.FingerSetActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.GestureActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.AnalyseManageActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.AlertSettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.CalendarActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.ShowMentionActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>