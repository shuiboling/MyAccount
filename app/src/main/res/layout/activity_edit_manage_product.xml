<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="16dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="产品维护"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="完成"
            android:textColor="@color/color_pink_dark"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f2f2f2" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="名称"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textSize="16dp"
        android:hint="请输入名称"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="类型"
        android:textSize="16dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv2"
        android:paddingHorizontal="12dp"
        app:chipSpacingHorizontal="12dp"
        app:chipSpacingVertical="12dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/chip_selector_background"
            android:checkable="true"
            android:text="理财"
            android:textColor="@drawable/chip_selector_text"
            app:checkedIconVisible="false"
            app:rippleColor="@color/color_8AC47592" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/chip_selector_background"
            android:checkable="true"
            android:text="股票基金"
            android:textColor="@drawable/chip_selector_text"
            app:checkedIconVisible="false"
            app:rippleColor="@color/color_8AC47592" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/chip_selector_background"
            android:checkable="true"
            android:text="混合基金"
            android:textColor="@drawable/chip_selector_text"
            app:checkedIconVisible="false"
            app:rippleColor="@color/color_8AC47592" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/chip_selector_background"
            android:checkable="true"
            android:text="债券基金"
            android:textColor="@drawable/chip_selector_text"
            app:checkedIconVisible="false"
            app:rippleColor="@color/color_8AC47592" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@drawable/chip_selector_background"
            android:checkable="true"
            android:text="货币基金"
            android:textColor="@drawable/chip_selector_text"
            app:checkedIconVisible="false"
            app:rippleColor="@color/color_8AC47592" />
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>

